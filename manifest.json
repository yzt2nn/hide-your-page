{
    "name": "Hide your page!",
    "version": "0.1",

    "manifest_version": 2,

    "icons":
	{
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},

    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },

    "permissions": ["contextMenus"],

    "background": {
        "scripts": ["background.js"]
    
    },
    "content_scripts": 
    [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ]
  }